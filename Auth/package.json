{
  "name": "auth",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npx nodemon --legacy-watch",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "rm -rf ./dist && npm run prebuild && tsc -p .",
    "build:start": "npm run build && node dist/app.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migrate": "npm run build && npm run typeorm migration:generate ./src/migrations/added-entity -d ./src/dataSource.ts",
    "db:push": "npm run build && npm run typeorm migration:run -d src/dataSource.ts",
    "docker:build": "docker build -t auth-service-image .",
    "docker:run": "docker run -v $(pwd):/app:ro -v /app/node_modules --env-file ./.env -p 8003:8003 -d --name auth-service auth-service-image",
    "docker:remove": "docker rm auth-service -f",
    "docker:prune": "docker volume prune",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "config": "^3.3.9",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-winston": "^4.2.0",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.1.2",
    "nodemon": "^2.0.20",
    "redis": "^4.6.5",
    "typeorm": "^0.3.12",
    "typescript": "^4.9.5",
    "winston": "^3.8.2",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^3.3.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.0",
    "morgan": "^1.10.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  }
}
